<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewCustom.Item"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="@string/total"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/TextViewCustom.Item"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/TextViewCustom.Item"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textview_result"
            style="@style/TextViewCustom.Item"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textview_number_modules"
        style="@style/TextViewCustom"
        android:layout_below="@id/view_1"
        android:text="@string/number_string"
        android:textColor="@android:color/black" />


    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_number_modules"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textview_area"
        style="@style/TextViewCustom"
        android:layout_below="@id/view_2"
        android:text="@string/min_area"
        android:textColor="@android:color/black" />


    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_area"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textview_monthly_saving"
        style="@style/TextViewCustom"
        android:layout_below="@id/view_3"
        android:text="@string/monthly_savings"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textview_note"
        style="@style/TextViewCustom"
        android:layout_below="@id/textview_monthly_saving"
        android:text="@string/note_normal"
        android:textColor="@android:color/black" />

</RelativeLayout>