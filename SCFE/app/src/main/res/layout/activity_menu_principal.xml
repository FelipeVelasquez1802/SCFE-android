<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".view.activities.PrincipalMenuActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/TextViewCustom.Title"
        android:text="Bienvenidos al sistema experto para cálculo de generación de energía fotovoltaica y eólica"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_fotovoltaica"
        style="@style/ButtonCustom"
        android:layout_below="@id/textView3"
        android:onClick="onClick"
        android:text="@string/sistema_fotovoltaico" />

    <Button
        android:id="@+id/button_eolico"
        style="@style/ButtonCustom"
        android:layout_below="@id/button_fotovoltaica"
        android:onClick="onClick"
        android:text="@string/sistema_eolico" />

    <ImageButton
        android:id="@+id/image_button_help"
        style="@style/ButtonCustom.Help"
        android:layout_below="@id/button_eolico"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewCustom.TextFooter"
        android:layout_alignParentBottom="true"
        android:text="@string/creditos"
        android:textAlignment="center" />


</RelativeLayout>